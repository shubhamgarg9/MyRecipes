<h1>All Recipes</h1>
<br/>

<% @recipes.each do |recipe| %>
	<div class="row">
		<div class="col-md-2">
			<section class="chef_info_center">
				<%= gravatar_for recipe.chef, size: 100 %>
				<h5>Chef name: <%= recipe.chef.chefname %></h5>
			</section>
		</div>

		<div class="col-lg-8 well">
			<h4><%= link_to recipe.name, "" %></h4>
			<p><%= recipe.text %></p>
			<p>
				<span class="quiet">
					<small>
						<%= time_ago_in_words(recipe.created_at) %>
					</small>
				</span>
			</p>
		</div>

	</div>
<% end %>